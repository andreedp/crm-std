define(['services/services'],
  function(services) {
	services.factory('User', ['$resource', '$cacheFactory', 
       function($resource, $cacheFactory) {
         	return $resource('/CRM-std/secAppUser/:id',{}, {
         		'update': {method: 'PUT'},
         		'delete': {method:'DELETE', url: '/CRM-std/secAppUser/:id', params: {id: '@id'}},
         		'current': {method:'GET', url: '/CRM-std/secAppUser/currentUser'},
         		'currentRole': {method:'GET', url: '/CRM-std/secAppUser/currentRole'},
         		'changePassword': {method:'POST', url: '/CRM-std/secAppUser/changePassword', params: {currentPassword: '@currentPassword', newPassword: '@newPassword'}},
         		'queryAuthorities':  {method:'GET', isArray:true, url: '/CRM-std/secAppUser/authorities/:id', params: {id: '@id'}},
         		'accessRights':  {method:'GET', isArray:true, url: '/CRM-std/secAppUser/accessRights'},
         		'getTenantSetting':  {method:'GET', url: '/CRM-std/secAppUser/getTenantSetting'},
         	});
     }]);
});