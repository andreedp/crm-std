package crm.std.core

import java.util.Date;

class Lead {

	String firstName	
	String lastName
	String title
	String sex
	String address	
	String city	
	String state
	String postalCode
	String country
	Date dob
	String email
	String socialMedia
	String company
	String department
	BigDecimal opportunityAmount
	Date closeDate
	String salesStage
	String type
	BigDecimal probability
	String leadSource
	String nextStep
	String description
	String assignTo
	String campaign
	
    static constraints = {
		id							maxSize:32
		name						maxSize:128
		opportunityAmount			nullable:true
		closeDate					nullable:true
		currency					maxSize:64, nullable:true, blank: true
		salesStage					maxSize:64, nullable:true, blank: true
		type						maxSize:64, nullable:true, blank: true
		probability					nullable:true
		leadSource					maxSize:64, nullable:true, blank: true
		nextStep					maxSize:64, nullable:true, blank: true
		description					maxSize:64, nullable:true, blank: true
		assignTo					maxSize:64, nullable:true, blank: true
		campaign					maxSize:64, nullable:true, blank: true
	}
}
