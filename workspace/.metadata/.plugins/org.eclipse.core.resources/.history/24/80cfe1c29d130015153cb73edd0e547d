class UrlMappings {

	static mappings = {
        "/$controller/$action?/$id?(.$format)?"{
            constraints {
                // apply constraints here
            }
        }       
		
		"/"(controller:"main", action:"index")
		"/login/$action?"(controller: "login")
		"/logout/$action?"(controller: "logout")
        "500"(view:'/error')
		
		
		"/user"(resources:"user")
		"/contact"(resources:"contact")
		"/contact"(resources:"contact")		
		
	}
}
